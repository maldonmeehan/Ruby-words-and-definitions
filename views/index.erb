<% if @words.length().>(0) %>
  <h2>Here are your words:</h2>
  <b></b>
  <ul>
    <%@words.each() do |word|%>
    <li><a href='/words/<%= word.id() %>'><%= word.name() %></a></li>
    <%end%>
  </ul>
  <ul>
    <li><a href='/words/new'>Add Another Word</a></li>
  </ul>

  <% else %>
  <h2>There are no words in your Dictionary</h2>
  <ul>
    <li><a href='/words/new'>Add a Word</a></li>
  </ul>
<% end %>
