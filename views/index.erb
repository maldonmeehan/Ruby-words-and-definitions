<% if @words.length().>(0) %>
  <h3>Here are your words:</h3>
  <ul>
    <% @words.each() do |word| %>
    <li><a href="/words/<%= word.id() %>"><%= word.name() %></a></li>
    <% end %>
  </ul>
  <p><a href="/words/new">Add A Word</a></p>

  <% else %>
  <h3>Here are your words:</h3>
  <p><a href='/words/new'>Add A Word</a></p>
<% end %>
